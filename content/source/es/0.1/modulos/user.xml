    <method>Register</method>
    <text>
      Tipo <arrow_right /> Escritura
      <br/>
      Acceso por URL <arrow_right /> No
    </text>
    <text>
       Registra un nuevo usuario.
    </text>
    <text>
      Ejemplo string json php:
    </text>
<code>
$json = '{
   "call"  : "User.Register",
   "email" : "hsoto@float.la",
   "password" : "4lt3rn4t1v4",
   "first_name" : "Horacio",
   "last_name"  : "Soto"
}';
</code>

    <subtitle>Parámetros</subtitle>
    <parameters>
      <param>
        <name>call</name>
        <type>String</type>
        <required>Si</required>
        <desc>Nombre del método a ser llamado</desc>
      </param>
      <param>
        <name>email</name>
        <type>String</type>
        <required>Si</required>
        <desc>E-mail del usuario</desc>
      </param>
      <param>
        <name>password</name>
        <type>String</type>
        <required>Si</required>
        <desc>Contraseña</desc>
      </param>
      <param>
        <name>first_name</name>
        <type>String</type>
        <required>Si</required>
        <desc>Nombre</desc>
      </param>
      <param>
        <name>last_name</name>
        <type>String</type>
        <required>Si</required>
        <desc>Apellido</desc>
      </param>
    </parameters>

    <divider />


